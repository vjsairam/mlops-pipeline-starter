# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyx text diff=python
*.pyi text diff=python
*.pyw text diff=python

# Jupyter notebooks
*.ipynb filter=nbstripout
*.ipynb diff=notebooks

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Documentation
*.md text
*.rst text
*.txt text

# Docker
Dockerfile text
.dockerignore text

# Kubernetes
*.yaml text
*.yml text

# Terraform
*.tf text
*.tfvars text
*.hcl text

# SQL
*.sql text

# Web
*.html text
*.css text
*.js text
*.jsx text
*.ts text
*.tsx text

# Data files (treat as binary)
*.csv binary
*.parquet binary
*.feather binary
*.pickle binary
*.pkl binary
*.joblib binary
*.h5 binary
*.hdf5 binary
*.npz binary
*.npy binary

# Model files (binary)
*.pt binary
*.pth binary
*.onnx binary
*.pb binary
*.tflite binary
*.safetensors binary
*.mlmodel binary
*.keras binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary
*.7z binary
*.rar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# LFS tracking for large files
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
*.pb filter=lfs diff=lfs merge=lfs -text
*.safetensors filter=lfs diff=lfs merge=lfs -text
*.mlmodel filter=lfs diff=lfs merge=lfs -text