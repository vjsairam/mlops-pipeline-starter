root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

[*.sql]
indent_size = 2

[*.tf]
indent_size = 2

[Dockerfile*]
indent_size = 4